Host *
    controlpath ~/.ssh/cm_socket/%r@%h:%p
    controlmaster auto
    controlpersist 3600
    ForwardAgent yes
    #AddKeysToAgent yes

Host *.es.net
	PKCS11Provider /Library/OpenSC/lib/opensc-pkcs11.so
	ForwardAgent yes
	PasswordAuthentication no

Host chic-tunnel
    hostname chic-gw.es.net
    dynamicforward localhost:3345
    user soehlert

Host lbl-tunnel
    hostname lbl-gw.es.net
    dynamicforward localhost:12345
    user soehlert

Host bitbucket.org
    IdentityFile ~/.ssh/bitbucket

Host personal.github.com
    HostName github.com
    User soehlert
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/github
    IdentitiesOnly yes
